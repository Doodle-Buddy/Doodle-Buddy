<div class = "container" id="background-image">

    <header class="container">
        <div class ="row">
            <div class ="col pull-l1">
                <h1 id="header" class="brand-logo center">Doodle Buddy</h1>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            
            <!-- Chat column -->
            <div class="col l3 m4">
                <div class="user-input" id="chat">

                    <!-- Display Messages -->
                    <div class="row">
                        <div class="col s12">
                            <ul id="messages"></ul>
                        </div>
                    </div>

                    <!-- User Input & Send -->
                    <div class="row">
                        <div class ="col s12">
                            <form action="">
                                <div class="input-field">
                                    <input id="m" autocomplete="off" />
                                    <button class="btn send-btn">Send</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col l7 m6 user-input" id="drawing">
                <canvas id="myCanvas" height="395px" width="400px"> </canvas>
                <div class="row">
                    <a class="waves-effect waves-light btn clear-btn" id="clear">Clear</a>
                </div>
            </div>

        </div>
    </div>

      <!-- Modal Structure -->
      <div id="modal1" class="modal">
        <div class="modal-content">
            <div class="input-field col s6">
              <input placeholder="Username" id="username" type="text" class="validate" required>
              <label for="Username">Username</label>
            </div>
            <div class="modal-footer">
                <a href="#!" id="submit-btn" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
            </div>
        </div>
      </div>

</div>

